<section class="row centered">
  <h2> Results for <%=@query%> </h2>
</section>

<section class="row small-up-1 medium-up-to-2 large-up-3">
<% @recipes.each do |recipe| %>
    <article class="column recipe">
    <figure>
      <img src="<%=recipe.image%>"/>
      <figcaption>
        <ul class="recipe_info">
      <li>
        <%uri = recipe.uri[/\_.+/]%>
        <strong><%=link_to recipe.label, recipe_path(uri)%></strong>
      </li>
      <li>
        <strong>Ingredients:</strong>
        <ul class="sublist">
          <%recipe.ingredients.each do |ingredient|%>
          <li>
          <%=ingredient%>
          </li>
          <% end %>
          </ul>
      </li>
      <li>
        <strong>Dietary Information:</strong>
          <ul class="sublist">
        <%recipe.dietary.each do |diet_info|%>
        <li>
          <%=diet_info%>
        </li>
        <% end %>
        </ul>
      </li>
      <li>
        <strong>Original recipe from <%=link_to recipe.source, recipe.recipe_url%></strong>
      </li>
      <li>
        uri: <%=recipe.uri%>
      </li>
      </ul>
      </figcaption>
      </figure>
      </article>
<%end %>
</section>
