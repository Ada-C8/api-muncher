<h1> recipe index page </h1>

<h2>Results for <%=@query%> </h2>
<ul>
<% @recipes.each do |recipe| %>
  <li>
    <figure>
      <img src="<%=recipe.image%>"/>
      <figcaption>
      <li>
        name: <%= recipe.label %>
      </li>
      <li>
        ingredients: <%= recipe.ingredients %>
      </li>
      <li>
       link to original recipe <%= recipe.recipe_url%>
      </li>
      <li>
        dietary: <%= recipe.dietary%>
      </li>
      </figcaption>
      </figure>
  </li>
</ul>
<%end %>
