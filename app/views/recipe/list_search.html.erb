<section class="row">
  <h2 class="column small-12 text-center"><%= "Results for \"#{params[:q]}\"" %></h2>

  <% @recipes.each do |recipe| %>
  <article class="column small-12 medium-6 large-3 end">
    <%= link_to image_tag(recipe.photo_uri, alt: "Photo of #{recipe.title}"), show_recipe_path(recipe.uri_hash)%>
    <%= link_to recipe.title, show_recipe_path(recipe.uri_hash) %>
  </article>
  <% end %>
</section>

<nav class="row">
  <div class="column small-12 text-center">
    <%= will_paginate @recipes, renderer: FoundationPagination::Rails %>
  </div>
</nav>
