<%= render partial: "search_form" %>

<section class="row text-center">
  <h1 class="small-12 column"><%= link_to @recipe.name, @recipe.url %></h1>
  <h3 class="small-12 large-12 column" >By: <%=@recipe.company%> </h3>
</section>


<div>
  <%= image_tag @recipe.photo, alt: "Image of recipe", class: "show-photo" %>
</div>

<article class="ingredients">
  <h3>Ingredients</h3>
  <ul>
    <% @recipe.ingredients.each do |ing| %>
      <li>
        <%= ing %>
      </li>
    <% end %>
  </ul>
</article>



<article class="diet-labels">
  <h3>Dietary Labels</h3>
  <ul>
    <% @recipe.diet_labels.each do |label| %>
      <li>
        <%= label %>
      </li>
    <% end %>
  </ul>
</article>
