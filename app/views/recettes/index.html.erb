
<% unless params[:item] == nil %>
  <h4>Results for "<%= params[:item].capitalize %>"</h4>
<% end %>

<%= will_paginate @recipes %>

<ul class="row small-up-1 medium-up-3">
  <% if @recipes.count > 0 %>
    <% @recipes.each do |recipe| %>
      <article class="recipe-box column">
        <li><img src="<%= recipe.image %>" alt="<%= recipe.title %>"></li>
        <li><h4><%= recipe.title %></h4></li>
        <li><%= link_to "See recipe", recette_path() + "?uri=#{URI.encode(recipe.uri)}" %></li>
        <%#= link_to "Add to favorites", favorite_path(session[:user_id]) + "?item=#{params[:item]}" + "&uri=#{URI.encode(@recipe.uri)}", class: "button" %>
      </article>
    <% end %>
  <% end %>
</ul>

<%= will_paginate @recipes %>
