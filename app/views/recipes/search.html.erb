<section class="header row">
  <h1 class="column">Reci-PEACE</h1>
</section>

<section class="search_bar column small-12">
  <h3>reci-peace is awaits you...</h3>
  <%= form_tag(recipes_path, method: :get) do %>
  <%=text_field_tag :search %>
  <%=submit_tag "Search", class:"button column small-12"%>
  <% end %>
</section>


<h2 class="peace_title"><%= link_to @recipeace.name, recipe_path(@recipeace.name, uri:
  @recipeace.uri, search_term: "peace")%></h2>

  <section class="featured row">
    <article class="featured_image column large-4 medium-6 small-12 center ">
      <%= image_tag @recipeace.image%>
    </article>
    <article class="featured_peace column large-8 medium-6 small-12">
      <ul>
        <li>
        </li>
        <li>
          <%(@recipeace.ingredients.length-1).times do |i|%>
          <%= @recipeace.ingredients[i] %>
          <% end %>
          <%= @recipeace.ingredients.last %>
        </li>

      </ul>
    </article>
  </section>
