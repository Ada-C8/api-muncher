<section class="recipes-list">
  <h1>Results for <%= "\"#{params[:search_term]}\"" %></h1>
  <ul>
    <% @recipes.each do |recipe| %>
      <li>
        <%= link_to recipe.label, recipe_path(recipe.uri) %>
        <%= image_tag recipe.image, alt: "photo of #{recipe.label}" %>
      </li>
    <% end %>
  </ul>

  <%= will_paginate @recipes %>
</section>
