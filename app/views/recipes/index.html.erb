<main>

  <section class="small-12 columns recipe-list">

    <h2>Search Results</h2>

    <ul class="small-up-1 medium-up-3 large-up-4">
    <li class="column">

    <% @recipes.each do |recipe| %>
      <%= image_tag recipe.image, class: "recipe-image" %>
      <%= link_to recipe.name, recipes_show_path(recipe.name, uri: recipe.uri), alt: "link to a given recipe", class: "recipe-name" %>
      <% end %>
    </li>
    </ul>

  </section>
</main>
