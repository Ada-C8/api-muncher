<section class="row recipe-index">
  <% if @recipes %>
    <h4>Results for <%= @query %></h4>

    <% @recipes.each do |recipe| %>
      <div class="small-12 medium-4 large-3 columns end">
        <%= link_to recipe_path(recipe.id) do %>
        <div class="recipe-card">
          <div class="recipe-image"
          style= "background-image: url('<%= recipe.image_url %>');"> </div>
          <h6><%= recipe.name %></h6>
        </div>
        <% end %>
      </div>
    <% end %>
    
    <div class="page-buttons">
      <% if @less %>
        <%= link_to "Prev Page", recipe_results_page_path(@query, (@page - 1)), class: "page-btn last-page" %>
      <% end %>
      <% if @more %>
        <%= link_to "Next Page", recipe_results_page_path(@query, (@page + 1)), class: "page-btn next-page" %>
      <% end %>
    </div>

  <% else %>
    <h4>Search for something tasty!</h4>
  <% end %>
</section>
