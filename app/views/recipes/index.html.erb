
<div class="panel callout radius">
  <h5>This is a callout panel.</h5>
  <p>It's a little ostentatious, but useful for important content.</p>
</div>

<%= params %>

<div class="row">

<% if @recipes.count > 0 %>
  <section class="large-12 columns">
    <h4>Results For "<%= params[:query] %>"</h4>
  </section>
  <section id="recipes-container" class="row">
  <% @recipes.each do |recipe| %>
    <article class="large-4 medium-6 small-12 columns end recipe-container">
      <article class="recipe-tile">
        <%= image_tag recipe.image, alt: recipe.name %>
        <h4><%= recipe.name %></h4>
        <p>Source: <%= recipe.source %></p>
        <%= link_to "More Info", recipe_path(params[:query], recipe.id), class: "button" %>
      </article>
    </article>
  <% end  %>

  <%= will_paginate @recipes %>
  </section>
<% else  %>
  <div class="large-12 columns">
    <h2>No recipes found for "<%= params[:query] %>"</h2>
  </div>
<% end %>

</div>
