  <section class="row">
    <% @recipes.each do |recipe| %>
      <div class="small-12 medium-6 large-4 columns">
        <%# uri_initial = "#{recipe.uri}" %>
        <%# uri = uri_initial.gsub(/%2F/, "/") %>
        <% uri_id = recipe.uri_id %>
