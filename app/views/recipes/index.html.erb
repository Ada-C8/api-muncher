<div class="recipe-show">

<h2>Results for <%= params[:item] %></h2>
<% if !@recipes.nil? %>
  <div class="list-products row small-up-1 medium-up-2 large-up-4">
    <% @recipes.each do |recipe| %>
      <div class="column">
        <ul>
          <li><%= link_to image_tag(recipe.image), recipe_path(id: recipe.uri) %></li>
          <li><%= recipe.label %></li>
        </ul>
      </div>
    <%end %>
  </div>

  <div class="pagination">
    <% if @from > 10 %>
      <%= link_to "PREVIOUS", recipes_path(item: @item, from: @previous_from), class: "page-over" %>
    <% end %>

    <%= link_to "NEXT", recipes_path(item: @item, from: @from), class: "page-over" %>
  </div>
<% end %>
</div>
