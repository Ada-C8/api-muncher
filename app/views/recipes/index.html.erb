<h2 class="result">Results for "<%= @search_term %>"</h2>

<article class="row small-up-1 medium-up-2 large-up-4">
  <% @recipes.each do |recipe| %>
    <div class="column">
      <div class="show-box">
        <%= image_tag "#{recipe.image}"%>
        <p>
          <%= link_to recipe.label, recipe_path(recipe.label, recipe_uri: recipe.uri)  %>
        </p>
      </div>
    </div>
  <% end %>
</article>
