<section class="search_bar_2 column center large-12 small-12">
  <h2>ReciPEACE</h2>
  <%= form_tag(recipes_path, method: :get) do %>
  <%=text_field_tag :search %>
  <%=submit_tag "search", class:"button column small-12 float-right"%>
  <% end %>
</section>


<section class="results row large-12">
<ol>
  <% @recipes.each do |recipe| %>
  <article class="list_result column large-4">
  <li>
    <ul>
      <li>
        <%= link_to recipe.name, recipe_path(recipe.name, uri: recipe.uri) %>
      </li>
      <li>
        <%= link_to "More", recipe.link %>
      </li>
      <li>
        <%= image_tag recipe.image, alt:"#{recipe.name} image" %>
      </li>
    </ul>
    </article>
    <% end %>
  </li>
</ol>
</section>
