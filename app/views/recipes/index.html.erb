<div class="hero-section">

  <div class="hero-section-text">
    <h1>Especially Recipes</h1>
    <h5>Eat Up!</h5>

    <section >

      <div class="row-column">

        <fieldset class="recipe-search">
          <%= form_tag search_path, method: "get" do %>
          <!-- <div class="label"> -->
            <%#= label_tag(:search, "Enter a Word to Find Tasty Recipes") %>
          <!-- </div> -->
          <div class="input">
            <%= text_field_tag(:search_term, @search_term) %>
          </div>
          <div class="form-button">
            <%= submit_tag("Press for Tasty Recipes") %>
          </div>

          <% end %>
        </fieldset>
      </div>

    </section>
  </div>
</div>
