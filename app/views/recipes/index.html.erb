<% provide(:title, "Recipe Search") %>

<div class="hero-section">

  <div class="hero-section-text">
    <h1 class="main-title">Especially Recipes</h1>
    <h5>What's For Dinner?</h5>

    <section >

      <div class="row-column">

        <fieldset class="recipe-search">
          <%= form_tag search_path, method: "get" do %>
          <div class="input">
            <%= text_field_tag(:search_term, @search_term, placeholder:"Eat Up!") %>
          </div>
          <div>
            <%= submit_tag("Press for Tasty Recipes", class:"button")%>
          </div>

          <% end %>
        </fieldset>
      </div>

    </section>
  </div>
</div>


