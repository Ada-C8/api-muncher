<section class="recipes-index">
      <% @recipes.each do |recipe| %>
        <article class="result">
          <p class="result-thumb"><%= image_tag recipe.image, alt:"#{recipe.label}" %></p>
          <p><%= link_to recipe.label, recipe_path(recipe.label, uri: recipe.uri) %></p>
        </article>
      <% end %>
</section>

<section>
  <%= will_paginate @recipes %>
</section>
