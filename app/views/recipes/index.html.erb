<div class="recipe-show">

<% if !@recipes.nil? %>
  <div class="list-products row small-up-1 medium-up-2 large-up-4">
    <% @recipes.each do |recipe| %>
      <div class="column">
        <ul>
          <li><%= link_to image_tag(recipe.image), recipe_path(id: recipe.uri) %></li>
          <li><%= recipe.label %></li>
        </ul>
      </div>
    <%end %>
  </div>

  <div class="pagination">
    <% if @from > 10 %>
      <%= link_to "Previous Page", recipes_path(item: @item, from: @previous_from), class: "button" %>
    <% end %>

    <%= link_to "Next Page", recipes_path(item: @item, from: @from), class: "button" %>
  </div>
<% end %>
</div>
