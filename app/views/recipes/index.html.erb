<section class="recipe-list">
  <h3>Recipe</h3>


    <%= form_tag(recipes_path, method: :get) do %>
      <%= label_tag(:query, "Search for:") %>
      <%= text_field_tag(:query) %>
      <%= submit_tag("Search") %>
    <% end %>

<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <%= link_to recipe.name %>
    </li>
  <% end %>
</ul>



</section>
