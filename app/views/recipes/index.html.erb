

<div class="search-box">
<h4> Welcome to Recipe Monster!  Type in a food item to search recipes: </h4>
<%= form_tag(root_path, method: "get", id: "search-form") do %>
  <%= text_field_tag :search, @search, placeholder: "Search Recipes" %>
  <%= submit_tag "Search", class: "button" %>
<%end%>
</div>

<% if @recipes != nil %>
  <div class="list-products row small-up-1 medium-up-2 large-up-4">
    <% @recipes.each do |recipe| %>
      <div class="column">
        <ul>
          <li>
            <%= image_tag(recipe.image, options = {alt: recipe.label}) %>
          </li>
          <li>
            <%= link_to recipe.label, recipes_path(id: recipe.id) %>
          </li>
      </div>
    <%end%>
  </div>

    <div class="pagination row-button-group">
      <div>
      <% if @previous_from >= 0 %>
      <%= link_to "Previous Page", root_path(search: @search, from: @previous_from), class: "button" %>
      <%end%>
      </div>
      <div>
      <%= link_to "Next Page", root_path(search: @search, from: @from), class: "button" %>
      </div>
    </div>

<%end%>
