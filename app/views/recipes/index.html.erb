<h1>Here are you results for: "<%= @query %>" </h1>
<ul>
  <% @recipes.each do |recipe| %>
  <li>
    <div class=name>
      <%= link_to recipe.name, recipe_path(recipe.name, recipe_id: recipe.id)%>
    </div>
    <img src="<%= recipe.image %>", alt="<%= recipe.name %>"/>
  </li>
  <% end %>
</ul>

<%= will_paginate @recipes %>
