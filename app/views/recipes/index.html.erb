
<article class = "search">
  <section>
    <h2>Search Results for <%= params[:search] %></h2>
  </section>

  <article class="row">

    <% @recipes.each do |r| %>
      <section class="search column large-3 medium-4 small-12">
      <%= link_to recipe_path(r.label, uri: r.uri) do %>

        <%= image_tag r.image, alt: r.image %>
        <p><%= r.label %></p>
      <% end %>
    </section>

    <% end %>
  </article>

  <section class="paginate">
    <p>hi!!! pagination isn't working! what's up with that???</p>
    <%= will_paginate(@recipes) %>
    <p>hello!!!</p>
  </section>

</article>

<footer class= "scroll">
  <%= link_to "Powered by Edamam", "https://www.edamam.com/" %>
</footer>
