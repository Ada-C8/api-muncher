<section class="recipe-search">

<div class="row-column">
  <fieldset>


    <%= form_tag search_path, method: "get" do %>
    <div class="label">
      <%= label_tag(:search, "Enter a Word to Find Tasty Recipes") %>
    </div>
      <div class="input">
        <%= text_field_tag(:search_term, @search_term) %>
      </div>
      <div class="form-button">
        <%= submit_tag("SEARCH") %>
      </div>

    <% end %>
    </fieldset>
</div>

</section>
