<section class="row recipe-index">
  <% if @recipes %>
    <h4>Results for <%= @query %></h4>

    <% @recipes.each do |recipe| %>
      <div class="small-12 medium-4 large-3 columns end">
        <%= link_to recipe_path(recipe.id) do %>
        <div class="recipe-card">
          <div class="recipe-image"
          style= "background-image: url('<%= recipe.image_url %>');"> </div>
          <h6><%= recipe.name %></h6>
        </div>
        <% end %>
      </div>
    <% end %>
    <% if @less %>
      <p>
        Prev Page
      </p>
    <% end %>
    <% if @more %>
      <%= link_to "Next Page", recipe_results_page_path(@query, (@page.to_i + 1)) %>
    <% end %>

  <% else %>
    <h4>Search for something tasty!</h4>
  <% end %>
</section>
