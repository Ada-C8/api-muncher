
<%= form_tag recipes_path, method: :get do %>
  <%= label_tag(:term, "Enter term to search for") %>
  <%= text_field_tag(:term) %>
  <%= submit_tag("Send") %>
<% end %>

<section class = "page columns small-6 small-offset-3 large-4 large-offset-4">
  <%= will_paginate @recipes, class: "float-right" %>
</section>

<section class="row">
    <% @recipes.each do |recipe| %>
    <article class = "columns small-10 medium-5 large-3 margin-3-col card">
      <h3><%= link_to "#{recipe.name}", recipe_path(recipe.name, uri: recipe.uri ) %></h3>
      <img src = "<%= recipe.image %>", alt = "<%=recipe.name %>"/>
      </article>
    <% end %>
</section>
