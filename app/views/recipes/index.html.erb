<div>
  <section class="recipes-list">
        <% @recipes.each do |recipe| %>
          <article class="recipe-links">
            <%= link_to recipe_path(recipe.uri) do %>
            <p class="recipe-pic"><%= image_tag recipe.image, alt:"#{recipe.title}" %></p>
            <p><%= recipe.title %></p>
            <% end %>
          </article>
        <% end %>
  </section>

  <section class="row pagination">
    <%= will_paginate @recipes %>
  </section>
</div>
