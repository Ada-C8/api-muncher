<h1>Recipes</h1>

<%= form_tag recipes_path, method: :get do %>
  <%= label_tag(:term, "What do you feel like munching?") %>
  <%= text_field_tag(:term) %>
  <%= submit_tag("Send", class: "button") %>
<% end %>


<% @recipes.each do |recipe| %>
<h3><%= link_to "#{recipe.label}", recipe_path(recipe.label, uri: recipe.uri ) %></h3>
<img src = "<%= recipe.image %>", alt = "<%=recipe.label %>"/>
<% end %>
