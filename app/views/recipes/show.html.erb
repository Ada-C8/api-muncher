<%= render 'layouts/header' %>


<div class="row-column">
  <h3 class="main-link"><%= link_to @result[0]["label"], @result[0]["shareAs"], :target => "_blank" %></h3>
</div>


<div class="row">

  <div class="small-12 medium-4 large-2 columns">
    <figure>
      <img src="<%= @result[0]["image"] %>">
      <figcaption>
        Source: <%= @result[0]["source"] %>
      </figcaption>
    </figure>
  </div>

  <div class="small-12 medium-4 large-5 columns">
    <div class="ingedients">
      <h4 class="ingredients">Ingredients</h4>
      <ul>
        <% @result[0]["ingredientLines"].each do |ingredient| %>
        <li class="ingredients"><%= ingredient %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="small-12 medium-4 large-5 columns">
    <ul>
      <li class-"ingredients">Dietary Information Here</li>
    </ul>
  </div>

</div>
