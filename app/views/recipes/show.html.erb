<div id="recipe-info">
   <h3><%=link_to @recipe.label, @recipe.url%></h3>
   <h4>By: <%=@recipe.source%></h4>
</div>
<div class="row">
  <!-- <section class="large-12 large-centered columns"> -->
    <section class="large-6 medium-6 small-12 columns" id="recipe-show-image">
   <%=image_tag("#{@recipe.image}", alt:"#{@recipe.label}") %>
