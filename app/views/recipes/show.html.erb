<section class="page">

<h2 class="nav"><%= @recipe.label %>'s recipe:</h2>
<section class="byline">By: <%= link_to "#{@recipe.source}", @recipe.url, target: "_blank" %></section>

<div class="row">
  <div class="pic medium-6 medium-push-6 columns">
    <%= image_tag "#{@recipe.image}", alt:"image"%>
  </div>

  <div class="ingredients medium-6 medium-pull-6 columns">
    <h4>Ingredients</h4>
    <ul>
      <% @recipe.ingredients.each do |ingredient| %>
      <li>
        <%= ingredient["text"] %>
      </li>
      <% end %>
    </ul>

    <% if @recipe.diet_labels != [] %>
    <h4>Diet Labels</h4>
    <ul>
      <% @recipe.diet_labels.each do |label| %>
      <li>
        <%= label %>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>

</section>
