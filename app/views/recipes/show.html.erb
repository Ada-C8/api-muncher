<nav>
  <h2 class="show">Mangia</h2>
    <%= form_tag(root_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, @search, placeholder: "Search Recipes" %>
    <%= submit_tag "Search", class: "button success" %>
  <% end %>
</nav>

<!-- Block 1 -->
<div class="columns">
  <h2 class="text-center"><%= @recipe.name %></h2>
  <p class="text-center"><%= link_to "By: #{@recipe.source}", @recipe.url, target: "_blank" %></p>
  <p class="text-center"> <%= "Servings per recipe: #{@recipe.servings.to_i}" %></p>

<div class="block_one">

<div class="image small-12 large-6 columns">
<%= image_tag("#{@recipe.image}", :alt => "#{@recipe.name} photo") %>
</div>

<div class="ingredients small-12 large-6 columns">
  <h3>Ingredients</h3>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
  </ul>
</div>
</div>

<div class="nutritional-information small-12 large-12 columns">
  <h3>Nutritional Information</h3>
  <ul>
    <li>
      <%= "Calories #{@recipe.calories.to_i}" %>
    </li>
    <li>
      <%= "Fat: #{@recipe.fat["quantity"].to_i} #{@recipe.fat["unit"]} " %>
    </li>
    <li>
      <%= "Carbs: #{@recipe.carbs["quantity"].to_i} #{@recipe.carbs["unit"]}" %>
    </li>
    <li>
      <%= "Protein: #{@recipe.protein["quantity"].to_i} #{@recipe.protein["unit"]}" %>
    </li>
  </ul>

  <h3>Dietary Considerations</h3>
  <ul>
    <li>
      <%= @recipe.health_labels[0] %>
    </li>
  </ul>
</div>


