<main>
  <header>
    <h1>MUNCHIES</h1>
    <div>
      <%= form_tag('/recipes', method: :get) do %>
        <%= label_tag(:q, "Search for a recipe here!") %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Find My Recipes!") %>
      <% end %>
    </div>
  </header>

  <article class="row">

    <div class="small-12 large-6 columns">
      <%= image_tag(@recipe.image_url) %>
    </div>

    <section class="small-12 large-6 columns">
      <h1><%= @recipe.label %></h1>
      <h2>Recipe by: <%= link_to @recipe.source, @recipe.source_url %></h2>
    </section>

    <section class="small-12 large 6-columns">
      <header>
        <h2>Ingredients</h2>
      </header>

      <div>
        <ul>
          <% @recipe.ingredient_lines.each do |line| %>
            <li>
              <%= line %>
            </li>
          <% end %>
        </ul>
      </div>
    </section>

    <section class="small-12 large 6-columns">
      <header>
        <h2>Nutrition Facts</h2>
      </header>
    </section>

  </article>
</main>
