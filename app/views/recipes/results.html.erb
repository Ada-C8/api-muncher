<%= render partial: "layouts/search_bar" %>

<h1> Recipes </h1>
<h2> Results for "<%= params[:q] %>" </h2>
<% @results.each do |result| %>
<section>
  <figure>
    <%= link_to(image_tag(result[:image], alt: "#{result[:label]}"), show_recipe_path(result[:uri])) %>
    <figcaption> <%= result[:label]%> </figcaption>
  </figure>
</section>
<% end %>
