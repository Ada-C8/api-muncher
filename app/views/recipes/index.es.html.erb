<div class="results">
  <% if @recipes %>

    <% if @count > 100 %>
      <h2><%= number_with_delimiter(@count) %> recetas con "<%= params[:ingredient] %>"</h2>
      <p>
        Mostrando las primeras 100
      </p>

    <% elsif @count > 0 %>
      <h2><%= number_with_delimiter(@count) %> recetas con "<%= params[:ingredient] %>"</h2>

    <% else %>
      <h2>Ning√∫n receta con <%= params[:ingredient] %></h2>

    <% end %>
  <% end %>
</div>

<ul class="row recipe-list">
  <% @recipes.each do |recipe| %>
  <li class="recipe-list columns small-12 medium-6 large-3 end">

    <%= link_to image_tag(recipe.image, alt: recipe.name), recipe_path(recipe.name, locale: :es, uri: recipe.uri) %>
    <p>
      <%= link_to recipe.name, recipe_path(recipe.name, locale: :es, uri: recipe.uri) %>
    </p>

  </li>
  <% end %>
</ul>


<%# in section div.pagination %>
<section class="row pagination">
  <%= will_paginate @recipes %>
</section>
