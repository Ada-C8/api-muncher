<div class='search'>
  <h1><%= link_to "MUNCHER", root_path %></h1>

  <div id='search_bar'>
    <% if current_page?(root_path) %>
      <p>
        Find your flavor...
      </p>
    <% end %>
    <div class='input-button'>
      <%= form_tag recipes_path, method: :get do %>

      <%= text_field_tag :query, "", class:'field' %>

      <%= submit_tag "Search", class: "button" %>
      <% end %>
    </div>
  </div>
</div>
