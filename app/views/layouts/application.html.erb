<!DOCTYPE html>
<html>
  <head>
    <title>ApiMuncher</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Recettes Muncher</h1>
      <div class="log-button">
        <% if session[:user_id] %>
          <%= link_to("Log out", logout_path, method: :post, class: "button") %>
          <%= link_to("My Favorites", favorites_path, class: "button") %>
        <% else %>
          <%= link_to("Log in with GitHub", github_login_path(:provider => "github"), class: "button") %>
          <%= link_to("Log in with Google", google_login_path(:provider => "google_oauth2"), class: "button") %>
          <%= link_to("Log in with Facebook", facebook_login_path(:provider => "facebook"), class: "button") %>
        <% end %>
      </div>

    </header>

    <section class="flash <%= flash[:status] %>">
        <p><%= flash[:message] %></p>
        <ul>
          <% if flash[:details] %>
            <% flash[:details].each do |field, problems| %>
              <% problems.each do |problem| %>
                <li> <strong><%= field.capitalize %> </strong> <%= problem %></li>
                <% end %>
              <% end %>
            <% end %>
        </ul>
      </section>

      <section class="search-bar">
        <%= form_tag recettes_path, method: "get" do %>
          <%= text_field_tag(:item) %>
          <% if session[:user_id] %>
            <span>Your recent search: </span>
            <% User.find_by(id: session[:user_id]).recent_search.uniq.each do |term|%>
              <span><%= link_to term, recettes_path(:item => term) %></span>
            <% end %>
            <br>
          <% end %>
          <%= submit_tag("Search")%>
        <% end %>
      </section>



    <%= yield %>
  </body>
</html>
