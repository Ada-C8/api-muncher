<h1><%= link_to "Muncher", root_path %></h1>
<%= link_to "Search in English", root_path %>

<section class="row search">

  <%= form_tag recipes_path, { method: :get } do %>
    <div class="row">
      <div class="columns small-12 large-6 large-offset-3 end">
        <%= label_tag :ingredient, "Encuentre su sabor..." %>
        <%= text_field_tag :ingredient, nil, placeholder: "¿Qué cocinaré hoy?" %>
      </div>
    </div>

    <div class="row">
      <div class="columns small-12 large-2 large-offset-7 end">
        <%= submit_tag "Buscar", id: "search-btn" %>
      </div>
    </div>
  <% end %>
</section>
