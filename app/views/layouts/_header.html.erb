    <h3 id="main-title">Especially Recipes</h3>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <%= form_tag search_path, method: "get" do %>
      <li>  <%= label_tag(:search, "Enter Search Term") %></li>
